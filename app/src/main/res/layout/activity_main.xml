<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/buttonBackspace"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/background_button_yellow"
            android:onClick="buttonBackspace"
            android:src="@drawable/backspace"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonDecimal"
            android:text="@string/decimalText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonEquals"
            app:layout_constraintTop_toBottomOf="@+id/buttonThree" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonZero"
            android:text="@string/zeroText"
            android:textColor="@color/tanAccent"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonDecimal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonOne" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_yellow"
            android:onClick="buttonEquals"
            android:text="@string/equalsText"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonTwo"
            android:text="@string/twoText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonOne"
            app:layout_constraintTop_toBottomOf="@+id/buttonFive" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonFour"
            android:text="@string/fourText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonSeven" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonFive"
            android:text="@string/fiveText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonFour"
            app:layout_constraintTop_toBottomOf="@+id/buttonEight" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonSix"
            android:text="@string/sixText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonFive"
            app:layout_constraintTop_toBottomOf="@+id/buttonNine" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_yellow"
            android:onClick="buttonSubtract"
            android:text="@string/subtractText"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonSix"
            app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_yellow"
            android:onClick="buttonAdd"
            android:text="@string/addText"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonThree"
            app:layout_constraintTop_toBottomOf="@+id/buttonSubtract" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonThree"
            android:text="@string/threeText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonTwo"
            app:layout_constraintTop_toBottomOf="@+id/buttonSix" />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonOne"
            android:text="@string/oneText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFour" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonEight"
            android:text="@string/eightText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonSeven"
            app:layout_constraintTop_toBottomOf="@+id/buttonParenthesesOpen" />

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonSeven"
            android:text="@string/sevenText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_yellow"
            android:onClick="buttonMultiply"
            android:text="@string/multiplyText"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonNine"
            app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_dark_grey"
            android:onClick="buttonNine"
            android:text="@string/nineText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonEight"
            app:layout_constraintTop_toBottomOf="@+id/buttonParenthesesClose" />

        <Button
            android:id="@+id/buttonParenthesesOpen"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/background_button_grey"
            android:onClick="buttonParenthesesOpen"
            android:text="@string/parenthesesOpenText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonClear"
            app:layout_constraintTop_toBottomOf="@+id/buttonBackspace" />

        <Button
            android:id="@+id/buttonParenthesesClose"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_grey"
            android:onClick="buttonParenthesesClose"
            android:text="@string/parenthesesCloseText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/buttonParenthesesOpen"
            app:layout_constraintTop_toBottomOf="@+id/buttonBackspace" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_yellow"
            android:onClick="buttonDivide"
            android:text="@string/divideText"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonParenthesesClose"
            app:layout_constraintTop_toBottomOf="@+id/buttonBackspace" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/background_button_grey"
            android:onClick="buttonClear"
            android:text="@string/clearText"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonBackspace" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editTextDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:ems="10"
        android:gravity="end"
        android:hint="@string/enter_a_value"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textViewCalculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>